    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Vitest",
            "autoAttachChildProcesses": true,
            "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
            "program": "${workspaceRoot}/node_modules/vitest/vitest.mjs",
            "args": ["run", "${relativeFile}", "--config=src/vitest.config.ts", "--testTimeout=0"],
            "smartStep": true,
            "console": "integratedTerminal"
        },
        {
            "name": "Debug operations metadata generator",
            "type": "node",
            "request": "launch",
        
            "program": "./src/tools/code-generator/metadata-generator.ts",
        
            /*
            * Path to tsx binary
            * Assuming locally installed
            */
            "runtimeExecutable": "tsx",
            "runtimeArgs": ["--no-warnings", "--trace-deprecation", "--abort-on-uncaught-exception"],
        
            /*
            * Open terminal when debugging starts (Optional)
            * Useful to see console.logs
            */
            "console": "internalConsole",
            "internalConsoleOptions": "neverOpen",
        
            // Files to exclude from debugger (e.g. call stack)
            "skipFiles": [
                // Node.js internal core modules
                "<node_internals>/**",
        
                // Ignore all dependencies (optional)
                "${workspaceFolder}/node_modules/**",
            ],
        },
        {
            "name": "Debug ctrls metadata generator",
            "type": "node",
            "request": "launch",
        
            "program": "./src/tools/code-generator/ctrls-metadata-generator.ts",
        
            /*
            * Path to tsx binary
            * Assuming locally installed
            */
            "runtimeExecutable": "tsx",
            "runtimeArgs": ["--no-warnings", "--trace-deprecation", "--abort-on-uncaught-exception"],
        
            /*
            * Open terminal when debugging starts (Optional)
            * Useful to see console.logs
            */
            "console": "internalConsole",
            "internalConsoleOptions": "neverOpen",
        
            // Files to exclude from debugger (e.g. call stack)
            "skipFiles": [
                // Node.js internal core modules
                "<node_internals>/**",
        
                // Ignore all dependencies (optional)
                "${workspaceFolder}/node_modules/**",
            ],
        },
        {
            "name": "Debug uvu 2 vitest codemod",
            "type": "node",
            "request": "launch",
        
            "program": "./src/tools/code-generator/uvu2vitest-codemod.ts",
        
            /*
            * Path to tsx binary
            * Assuming locally installed
            */
            "runtimeExecutable": "tsx",
            "runtimeArgs": ["--no-warnings", "--trace-deprecation", "--abort-on-uncaught-exception"],
        
            /*
            * Open terminal when debugging starts (Optional)
            * Useful to see console.logs
            */
            "console": "internalConsole",
            "internalConsoleOptions": "neverOpen",
        
            // Files to exclude from debugger (e.g. call stack)
            "skipFiles": [
                // Node.js internal core modules
                "<node_internals>/**",
        
                // Ignore all dependencies (optional)
                "${workspaceFolder}/node_modules/**",
            ],
        }
     ]
}