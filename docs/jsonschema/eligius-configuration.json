{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://rolandzwaga.github.io/eligius/jsonschema/eligius-configuration.json",
  "type": "object",
  "title": "The Eligius Configuration Schema",
  "required": [
    "id",
    "engine",
    "containerSelector",
    "timelineProviderSettings",
    "language",
    "layoutTemplate",
    "availableLanguages",
    "timelines"
  ],
  "properties": {
    "id": {
      "$id": "#/properties/id",
      "type": "string",
      "title": "The Id Schema",
      "examples": ["123e4567-e89b-12d3-a456-426614174000"],
      "pattern": "^[0-9a-fA-F]{8}\b-[0-9a-fA-F]{4}\b-[0-9a-fA-F]{4}\b-[0-9a-fA-F]{4}\b-[0-9a-fA-F]{12}$"
    },
    "engine": {
      "$ref": "/engine-config.json"
    },
    "timelineProviderSettings": {
      "$ref": "/timeline-provider-settings.json"
    },
    "containerSelector": {
      "$id": "#/properties/containerSelector",
      "type": "string",
      "title": "The Containerselector Schema",
      "default": "",
      "examples": ["#eligius-container"],
      "pattern": "^(.*)$"
    },
    "language": {
      "$id": "#/properties/language",
      "type": "string",
      "title": "The Language Schema",
      "default": "",
      "examples": ["en-US"],
      "pattern": "^(.*)$"
    },
    "layoutTemplate": {
      "$id": "#/properties/layoutTemplate",
      "type": "string",
      "title": "The Layouttemplate Schema",
      "default": "",
      "examples": ["template:layoutTemplate"],
      "pattern": "^(.*)$"
    },
    "availableLanguages": {
      "$id": "#/properties/availableLanguages",
      "type": "array",
      "title": "The Availablelanguages Schema",
      "items": {
        "$id": "#/properties/availableLanguages/items",
        "type": "object",
        "title": "The Items Schema",
        "required": ["code", "label"],
        "properties": {
          "code": {
            "$id": "#/properties/availableLanguages/items/properties/code",
            "type": "string",
            "title": "The Code Schema",
            "default": "",
            "examples": ["en-US"],
            "pattern": "^(.*)$"
          },
          "label": {
            "$id": "#/properties/availableLanguages/items/properties/label",
            "type": "string",
            "title": "The Label Schema",
            "default": "",
            "examples": ["English"],
            "pattern": "^(.*)$"
          }
        }
      }
    },
    "initActions": {
      "$id": "#/properties/initActions",
      "type": "array",
      "title": "The Initactions Schema",
      "items": {
        "$ref": "/endable-action.json"
      }
    },
    "actions": {
      "$id": "#/properties/initActions",
      "type": "array",
      "title": "The Initactions Schema",
      "items": {
        "$ref": "/endable-action.json"
      }
    },
    "eventActions": {
      "$id": "#/properties/initActions",
      "type": "array",
      "title": "The Initactions Schema",
      "items": {
        "$ref": "/event-action.json"
      }
    },
    "timelines": {
      "$id": "#/properties/timelines",
      "type": "array",
      "title": "The timelines schema",
      "items": {
        "$ref": "/timeline.json"
      }
    },
    "labels": {
      "$id": "#/properties/labels",
      "type": "array",
      "title": "The Labels Schema"
    }
  }
}