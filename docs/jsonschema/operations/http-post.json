{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://eligius.com/schema/http-post-operation.json",
  "type": "object",
  "title": "The httpPost schema",
  "description": "Performs an HTTP POST request to the specified URL.",
  "required": [
    "systemName",
    "operationData"
  ],
  "properties": {
    "id": {
      "$id": "#/properties/id",
      "type": "string",
      "title": "The Id Schema",
      "examples": [
        "123e4567-e89b-12d3-a456-426614174000"
      ],
      "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
    },
    "systemName": {
      "$id": "#/properties/systemName",
      "const": "httpPost"
    },
    "operationData": {
      "$id": "#/properties/operationData",
      "type": "object",
      "title": "The Operationdata Schema",
      "required": [
        "url"
      ],
      "properties": {
        "url": {
          "$id": "#/properties/operationData/url",
          "type": [
            "string"
          ]
        },
        "body": {
          "$id": "#/properties/operationData/body",
          "type": [
            "object"
          ]
        },
        "headers": {
          "$id": "#/properties/operationData/headers",
          "type": [
            "object"
          ]
        }
      }
    }
  }
}