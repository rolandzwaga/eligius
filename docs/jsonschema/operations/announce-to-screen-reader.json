{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://eligius.com/schema/announce-to-screen-reader-operation.json",
  "type": "object",
  "title": "The announceToScreenReader schema",
  "description": "Announces a message to screen readers using an ARIA live region.",
  "required": ["systemName", "operationData"],
  "properties": {
    "id": {
      "$id": "#/properties/id",
      "type": "string",
      "title": "The Id Schema",
      "examples": ["123e4567-e89b-12d3-a456-426614174000"],
      "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
    },
    "systemName": {
      "$id": "#/properties/systemName",
      "const": "announceToScreenReader"
    },
    "operationData": {
      "$id": "#/properties/operationData",
      "type": "object",
      "title": "The Operationdata Schema",
      "required": ["message"],
      "properties": {
        "message": {
          "$id": "#/properties/operationData/message",
          "type": ["string"]
        },
        "priority": {
          "$id": "#/properties/operationData/priority",
          "type": "array"
        }
      }
    }
  }
}
