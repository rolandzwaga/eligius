{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://eligius.com/schema/substring-text-operation.json",
  "type": "object",
  "title": "The substringText schema",
  "description": "Extracts a substring from text between start and end indices.",
  "required": ["systemName", "operationData"],
  "properties": {
    "id": {
      "$id": "#/properties/id",
      "type": "string",
      "title": "The Id Schema",
      "examples": ["123e4567-e89b-12d3-a456-426614174000"],
      "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
    },
    "systemName": {
      "$id": "#/properties/systemName",
      "const": "substringText"
    },
    "operationData": {
      "$id": "#/properties/operationData",
      "type": "object",
      "title": "The Operationdata Schema",
      "required": ["start"],
      "properties": {
        "start": {
          "$id": "#/properties/operationData/start",
          "type": ["number"]
        },
        "end": {
          "$id": "#/properties/operationData/end",
          "type": "array"
        }
      }
    }
  }
}
