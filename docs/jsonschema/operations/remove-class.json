{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://eligius.com/schema/operation.json",
  "type": "object",
  "title": "The removeClass schema",
  "description": "Removes the specified class from the selected element",
  "required": [
    "systemName",
    "operationData"
  ],
  "properties": {
    "id": {
      "$id": "#/properties/id",
      "type": "string",
      "title": "The Id Schema",
      "examples": [
        "123e4567-e89b-12d3-a456-426614174000"
      ],
      "pattern": "^[0-9a-fA-F]{8}\b-[0-9a-fA-F]{4}\b-[0-9a-fA-F]{4}\b-[0-9a-fA-F]{4}\b-[0-9a-fA-F]{12}$"
    },
    "systemName": {
      "$id": "#/properties/systemName",
      "const": "removeClass"
    },
    "operationData": {
      "$id": "#/properties/operationData",
      "type": "object",
      "title": "The Operationdata Schema",
      "required": [
        "className"
      ],
      "properties": {
        "className": {
          "$id": "#/properties/operationData/className",
          "type": "string",
          "pattern": ".-?[_a-zA-Z]+[_a-zA-Z0-9-]*"
        }
      }
    }
  }
}