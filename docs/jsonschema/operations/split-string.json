{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://eligius.com/schema/split-string-operation.json",
  "type": "object",
  "title": "The splitString schema",
  "description": "Splits a string into an array by delimiter (string or regex).",
  "required": ["systemName", "operationData"],
  "properties": {
    "id": {
      "$id": "#/properties/id",
      "type": "string",
      "title": "The Id Schema",
      "examples": ["123e4567-e89b-12d3-a456-426614174000"],
      "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
    },
    "systemName": {
      "$id": "#/properties/systemName",
      "const": "splitString"
    },
    "operationData": {
      "$id": "#/properties/operationData",
      "type": "object",
      "title": "The Operationdata Schema",
      "required": ["delimiter"],
      "properties": {
        "delimiter": {
          "$id": "#/properties/operationData/delimiter",
          "type": "array"
        },
        "limit": {
          "$id": "#/properties/operationData/limit",
          "type": "array"
        }
      }
    }
  }
}
