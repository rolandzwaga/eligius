{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://eligius.com/schema/toggle-form-element-operation.json",
  "type": "object",
  "title": "The toggleFormElement schema",
  "description": "Enables or disables form input elements (inputs, selects, textareas, buttons).\n\nSets the `disabled` property on the element. When `enabled` is true, removes the disabled\nattribute; when false, adds the disabled attribute.",
  "required": ["systemName", "operationData"],
  "properties": {
    "id": {
      "$id": "#/properties/id",
      "type": "string",
      "title": "The Id Schema",
      "examples": ["123e4567-e89b-12d3-a456-426614174000"],
      "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
    },
    "systemName": {
      "$id": "#/properties/systemName",
      "const": "toggleFormElement"
    },
    "operationData": {
      "$id": "#/properties/operationData",
      "type": "object",
      "title": "The Operationdata Schema",
      "required": ["enabled"],
      "properties": {
        "enabled": {
          "$id": "#/properties/operationData/enabled",
          "type": ["boolean"]
        }
      }
    }
  }
}
