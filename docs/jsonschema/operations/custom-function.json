{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://eligius.com/schema/custom-function-operation.json",
  "type": "object",
  "title": "The customFunction schema",
  "description": "This operation retrieves a custom function defined by the given system name\nand invokes it with the current operation data and eventbus.",
  "required": ["systemName", "operationData"],
  "properties": {
    "id": {
      "$id": "#/properties/id",
      "type": "string",
      "title": "The Id Schema",
      "examples": ["123e4567-e89b-12d3-a456-426614174000"],
      "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
    },
    "systemName": {
      "$id": "#/properties/systemName",
      "const": "customFunction"
    },
    "operationData": {
      "$id": "#/properties/operationData",
      "type": "object",
      "title": "The Operationdata Schema",
      "required": ["systemName"],
      "properties": {
        "systemName": {
          "$id": "#/properties/operationData/systemName",
          "type": ["string"]
        }
      }
    }
  }
}
