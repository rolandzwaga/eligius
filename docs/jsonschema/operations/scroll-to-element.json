{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://eligius.com/schema/scroll-to-element-operation.json",
  "type": "object",
  "title": "The scrollToElement schema",
  "description": "Scrolls the viewport to bring the selected element into view.\n\nUses the browser's `scrollIntoView` API with configurable behavior.",
  "required": [
    "systemName",
    "operationData"
  ],
  "properties": {
    "id": {
      "$id": "#/properties/id",
      "type": "string",
      "title": "The Id Schema",
      "examples": [
        "123e4567-e89b-12d3-a456-426614174000"
      ],
      "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
    },
    "systemName": {
      "$id": "#/properties/systemName",
      "const": "scrollToElement"
    },
    "operationData": {
      "$id": "#/properties/operationData",
      "type": "object",
      "title": "The Operationdata Schema",
      "required": [],
      "properties": {
        "behavior": {
          "$id": "#/properties/operationData/behavior",
          "type": "array"
        },
        "block": {
          "$id": "#/properties/operationData/block",
          "type": "array"
        },
        "inline": {
          "$id": "#/properties/operationData/inline",
          "type": "array"
        }
      }
    }
  }
}