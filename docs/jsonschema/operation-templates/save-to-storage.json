{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://eligius.com/schema/save-to-storage-operation.json",
  "type": "object",
  "title": "The saveToStorage schema",
  "description": "Saves data to browser storage (localStorage or sessionStorage).\n\nSerializes the value as JSON before storing. Supports any JSON-serializable data type.",
  "required": [
    "systemName"
  ],
  "properties": {
    "id": {
      "$id": "#/properties/id",
      "type": "string",
      "title": "The Id Schema",
      "examples": [
        "123e4567-e89b-12d3-a456-426614174000"
      ],
      "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
    },
    "systemName": {
      "$id": "#/properties/systemName",
      "const": "saveToStorage"
    },
    "operationData": {
      "$id": "#/properties/operationData",
      "type": "object",
      "title": "The Operationdata Schema",
      "properties": {
        "key": {
          "$id": "#/properties/operationData/key",
          "type": [
            "string"
          ]
        },
        "value": {
          "$id": "#/properties/operationData/value",
          "type": [
            "object"
          ]
        },
        "storageType": {
          "$id": "#/properties/operationData/storageType",
          "type": "array"
        }
      }
    }
  }
}