{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://eligius.com/schema/replace-string-operation.json",
  "type": "object",
  "title": "The replaceString schema",
  "description": "Replaces occurrences of a pattern in a string (alias for replaceText for string context).",
  "required": [
    "systemName"
  ],
  "properties": {
    "id": {
      "$id": "#/properties/id",
      "type": "string",
      "title": "The Id Schema",
      "examples": [
        "123e4567-e89b-12d3-a456-426614174000"
      ],
      "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
    },
    "systemName": {
      "$id": "#/properties/systemName",
      "const": "replaceString"
    },
    "operationData": {
      "$id": "#/properties/operationData",
      "type": "object",
      "title": "The Operationdata Schema",
      "properties": {
        "pattern": {
          "$id": "#/properties/operationData/pattern",
          "type": "array"
        },
        "replacement": {
          "$id": "#/properties/operationData/replacement",
          "type": [
            "string"
          ]
        }
      }
    }
  }
}